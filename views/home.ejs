<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title> 
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@500&display=swap" rel="stylesheet">
</head>
<body >
    
    <form action="/user/signout" method="POST">
        <button type="submit" id="signout">Sign Out</button>
    </form>

    <!-- <div id="webname">shortly</div> -->
    <form id="form-box" method="POST" action="/url">

        <label >Enter your link </label>
        <input type="name" name="url" placeholder="https://demo.com">
        <button class="btn1" type="submit">Generate</button>
    </form>

    <table>
        <thead>
            <th>Short-URL</th>
            <th>Original-URL</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url,index) => { %>
                <tr>
                    <td><a href="https://xs-pink.vercel.app/url/<%= url.shortId %>">https://xs-pink.vercel.app/url/<%= url.shortId %></a></td>
                    <td><%= url.redirectId %></td>
                    <td id="clicks-count"><%= url.visitHistory.length %></td>
                </tr>
             
            <% }) %>
        </tbody>
    </table>
</body>
</html>